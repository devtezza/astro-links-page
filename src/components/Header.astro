---
import {Icon} from 'astro-icon';
// let isDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
// console.log(matched);
---

<header>
    <div class="top">
        <!-- <img src="images/cover.jpg" alt=""> -->
        <div class="avatar"></div>
    </div>
    <div class="bottom">
       <div class="theme-switcher">
           <button class="light"><Icon name="bi:brightness-high" width="24"/></button>
           <button class="dark"><Icon name="bi:moon" width="20"/></button>
       </div>
    </div>    
    <h1>Your Name</h1>
    
</header>

<style lang="scss">
    @use '../styles/functions' as *;
    @use '../styles/mixins' as *;
    @use '../styles/global' as *;
    $top-height: 15vh;
    $top-height-md: min(25vh, 250px);
    $bottom-height: 10vh;
    $avatar-dimensions: convert-pixels-to-rem(112px);
    $avatar-dimensions-md: convert-pixels-to-rem(180px);
    $avatar-dimensions-lg: convert-pixels-to-rem(230px);
    $avatar-vertical-offset: 23%;
    $theme-switcher-width: convert-pixels-to-rem(76px);     
    
    .top {
        // border: 1px solid green;
        position: relative;
        width: 100%;
        height: $top-height;;        
        background-image: url(images/cover.jpg);
        background-size: cover;      
        background-position: center left;
        background-repeat: no-repeat;

        @include media-md {
            height: $top-height-md;
        }
        // img {
        //     object-fit: cover;
        //     // aspect-ratio: 3 / 1;
        //     max-height: 100%;
        //     width: 100%;
        //     object-position: 50% 100%;
        // }
    }

    .avatar {        
        position: absolute;
        width: $avatar-dimensions;
        height: $avatar-dimensions;       
        left: 50%;
        bottom: 0;
        transform: translate(-50%, $avatar-vertical-offset);
        border-radius: 50%;
        background-image: url(images/avatar.png);
        background-size: cover;

        @include media-md {
            width: $avatar-dimensions-md;
            height: $avatar-dimensions-md;
        }

        @include media-xl {
            width: $avatar-dimensions-lg;
            height: $avatar-dimensions-lg;
            left: $lg-padding;
            transform: translate(-15%, $avatar-vertical-offset);
        }
    }

    .avatar::after {
        content: '@yourbio';
        position: absolute;
        left: 50%;
        bottom: 0;
        transform: translate(-50%, 1.5rem);       
        
        @include media-md {
            font-size: convert-pixels-to-rem(21px);
            transform: translate(-50%, 2rem); 
        }

        @include media-lg {
            transform: translate(-50%, 2.5rem);
        }
        
    }

    .bottom {
        // height: $bottom-height;
        padding: $base-padding;
        padding-bottom: calc($base-padding) / 3;
        display: flex;
        justify-content: flex-end;       
        // border: 1px solid red;

        @include media-md {
            padding-inline: $md-padding;
            padding-top: $md-padding;            
        }

        @include media-xl {
            padding-inline: $lg-padding;            
        }
    }

    // .username {
    //     display: block;
    //     margin-top: $avatar-vertical-offset;

    //     @include media-md {
    //         font-size: 2rem;
    //     }
    // }

    .theme-switcher {
        display: flex;
        // border: 1px solid red;
        width: $theme-switcher-width;
        justify-content: space-between;
    }

    h1 {
        // border: 1px solid green;        
        font-size: convert-pixels-to-rem(30px);
        font-weight: 600;
        text-align: center;

        @include media-height {
            font-size: convert-pixels-to-rem(40px);
        }

        @include media-md {
            font-size: convert-pixels-to-rem(82px);           
        }
    }

    [astro-icon] {
        color: $dark-alt;

        @include media-dark {
            color: $light-icon;
        }
    }
    
</style>
